{
  "schemaVersion": 1,
  "id": "triangular",
  "name": "Triangular Lattice",
  "description": "2D triangular lattice (square grid with one diagonal per cell)",
  "dimension": 2,
  "latticeVectors": {
    "a1": [1, 0, 0],
    "a2": [0, 1, 0]
  },
  "unitCell": {
    "nodes": [{ "id": "a", "offset": [0, 0, 0] }],
    "edges": [
      { "source": "a", "target": "a", "cellOffset": [1, 0, 0] },
      { "source": "a", "target": "a", "cellOffset": [0, 1, 0] },
      { "source": "a", "target": "a", "cellOffset": [1, 1, 0] }
    ]
  }
}
